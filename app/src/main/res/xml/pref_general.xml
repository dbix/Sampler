<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_settings_drive"
        android:key="checkbox_auto_upload"
        android:summary="@string/pref_autoupload_description"
        android:title="@string/pref_autoupload"/>
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_encoding_list_titles"
        android:entryValues="@array/pref_encoding_list_values"
        android:icon="@drawable/ic_settings_encoding"
        android:key="list_encoding"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Encoding"/>
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_sample_rate_list_titles"
        android:entryValues="@array/pref_sample_rate_list_values"
        android:icon="@drawable/ic_settings_sample_rate"
        android:key="list_sample_rate"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Sample Rate"/>
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_microphone_list_titles"
        android:entryValues="@array/pref_microphone_list_values"
        android:icon="@drawable/ic_settings_mic"
        android:key="list_microphone"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Input Microphone"/>

</PreferenceScreen>
