<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffffffff">


    <edu.asu.sampler.WaveformView
        android:id="@+id/waveform_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonBar"
        android:layout_toEndOf="@+id/decibelProgressBar"
        android:layout_below="@+id/progressBar"
        android:autoText="false"/>

    <TextView
        android:id="@+id/decibel_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_toStartOf="@+id/buttonBar"
        android:layout_below="@+id/waveform_view"
        android:layout_alignParentStart="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarStyle"
        android:id="@+id/buttonBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/btnPlay_text"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btnPlay" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnReset_text"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btnReset" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/btnRecord_text"
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/btnRecord" />

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_toStartOf="@+id/buttonBar"
        android:layout_below="@+id/textViewDiskUsage"
        android:layout_alignEnd="@+id/waveform_view"
        android:layout_alignStart="@+id/waveform_view"/>

    <edu.asu.sampler.VerticalProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/decibelProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:progress="50"
        android:layout_alignBottom="@+id/waveform_view"
        android:layout_below="@+id/progressBar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Disk:"
        android:id="@+id/textViewDiskUsage"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/progressBar"/>

</RelativeLayout>

