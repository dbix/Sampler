<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffffff"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">


    <edu.asu.sampler.WaveformView
        android:id="@+id/waveform_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/decibel_view"
        android:layout_below="@+id/progressBar"
        android:layout_toEndOf="@+id/decibelProgressBar"
        android:autoText="false"/>

    <TextView
        android:id="@+id/decibel_view"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom|left"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff000000"
        android:typeface="normal"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewDiskUsage"/>

    <edu.asu.sampler.VerticalProgressBar
        android:id="@+id/decibelProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/waveform_view"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/progressBar"
        android:progress="50"/>

    <TextView
        android:id="@+id/textViewDiskUsage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Disk: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="normal"/>

</RelativeLayout>

