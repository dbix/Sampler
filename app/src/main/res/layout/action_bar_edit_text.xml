<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextFileName"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/buttonUploadToDrive"
        android:editable="true"
        android:enabled="true"
        android:hint="filename.wav"
        android:imeOptions="actionDone"
        android:inputType="textAutoComplete"
        android:selectAllOnFocus="true"
        android:soundEffectsEnabled="true"/>

    <Button
        android:id="@+id/buttonUploadToDrive"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/editTextFileName"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/buttonRecord"
        android:background="@drawable/ic_google_drive"
        android:clickable="true"
        android:onClick="buttonDriveClicked"
        android:soundEffectsEnabled="true"/>

    <Button
        android:id="@+id/buttonRecord"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonUploadToDrive"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_record_button"
        android:clickable="true"
        android:onClick="buttonRecordClicked"
        android:soundEffectsEnabled="true"/>

</RelativeLayout>